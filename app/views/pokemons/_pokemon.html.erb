<div class="pokemon">
  <img class="pokemon-sprite" width="96" height="96" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= pokemon.pokedex_id %>.png"/>
  <%= turbo_frame_tag pokemon do %>
    <div>id <%= pokemon.id %></div>
    <div>name <%= pokemon.nickname %></div>
    <div>alive? <%= pokemon.is_alive %></div>
    <div>boxed? <%= pokemon.is_boxed %></div>
    <%= link_to 'Edit this pokemon', edit_game_team_pokemon_path(game, team, pokemon) %>
    <%= button_to 'Destroy this pokemon', game_team_pokemon_path(game, team, pokemon), method: :delete %>
  <% end %>

</div>