<datalist id="pokemon-datalist">
    <% @all_pokemon.each_with_index do |pokemon, index| %>
      <option value="<%= index + 1%>">
      <%= pokemon.pokemon_species.name %></option>
    <% end %>
</datalist>
<input id="pokemon-id-<%= pokemon_id %>" placeholder="Edit pokemon" autoComplete="on" list="pokemon-datalist" data-controller="edit-pokemon" data-action="change->edit-pokemon#editPokedexId" data-id="<%= pokemon_id %>"/> 
